(define (main-loop max-num debug-flag)
  (begin
    (let ((sum 0)
	  (counter 0)
	  (null-list (list)))
      (begin
	(do ((ii 1 (+ ii 1)))
	    ((> ii max-num))
	  (begin
	    (if (and
		 (palindrome? ii 10)
		 (palindrome? ii 2))
		(begin
		  (set! counter (+ counter 1))
		  (set! sum (+ sum ii))

		  (if (equal? debug-flag #t)
		      (begin
			(let ((s1 (number->string ii 10))
			      (s2 (number->string ii 2)))
			  (begin
			    (display (ice9-format:format #f "(~:d) ~a = ~a (binary) (sum so far = ~:d)~%"
							 counter s1 s2 sum))
			    (force-output)
			    ))))
		  ))
	    ))

	(display (ice9-format:format #f "The sum of all palindromic numbers in base 10 and base 2 = ~:d,~%"
				     sum))
	(display (ice9-format:format #f "and there are ~:d such numbers less than ~:d~%"
				     counter max-num))
	))))

