(define (palindrome? nn base)
  (cond
   ((< nn 0) #f)
   (else
    (begin
      (let ((tstring (number->string nn base)))
	(let ((rstring (string-reverse tstring)))
	  (string-ci=? tstring rstring)
	  ))))
   ))

